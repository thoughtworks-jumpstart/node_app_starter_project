  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Application",
      "program": "${workspaceFolder}/main.js"
    },
    {
      "name": "Debug Jest Test Cases", 
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
      "sourceMaps": true, // if you are using Babel or TypeScript, make this true
      // you can add another arg to pattern-match limit the tests, just as when normally running jest
      "args": ["-i", "--runInBand", "--no-cache"],
      "internalConsoleOptions": "openOnSessionStart",
      "runtimeArgs": [],
      "env": {
        "NODE_ENV": "test" 
      }
    }
  ]
}